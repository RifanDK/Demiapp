<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna saat tombol ditekan -->
            <corners android:radius="16dp" /> <!-- Radius sudut yang membulat -->
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- Border color saat ditekan -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna tombol normal -->
            <corners android:radius="16dp" /> <!-- Radius sudut yang membulat -->
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- Border color normal -->
        </shape>
    </item>
</selector>
